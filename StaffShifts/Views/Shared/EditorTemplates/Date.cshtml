@model Nullable<DateTime>

@{
    DateTime dt = DateTime.Now;
    
    if(Model !=null)
    {
        dt = (System.DateTime)Model;
    }
    
    @Html.TextBox("", String.Format("{0:dd/MM/yyyy}", dt.ToShortDateString()), new { @class = "date-picker", type = "date"})
    @*@Html.TextBox("", String.Format("{0:dd/MM/yyyy}", dt.ToShortDateString()), new { @class = "form-control datecontrol", type = "date" })*@
}
